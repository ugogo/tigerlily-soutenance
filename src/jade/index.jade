doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet", href="css/app.css")
  body
    .slides-container

      .slide.slide--1.slide--darker.is-current(data-animation="fadeIn")
        .slide-content
          h1 Soutenance de stage
            span Onali ugo - tw 2014
          img.cifacom-logo(src="imgs/cifacom/logo--white.png", width="150")
          img.tl-logo(src="imgs/tigerlily/logo-2.png", width="90")

      .slide.slide--2.slide--lighter(data-animation="zoomIn")
        .slide-content
          img.tl-logo(src="imgs/tigerlily/logo-1.gif", width="300")
          ul.products-container
            li.product.slide-child(data-animation="bounceIn")
              img(src="imgs/tigerlily/products/conversation.svg")
              h2.product-title.tl-product-title Conversation
            li.product.slide-child(data-animation="bounceIn")
              img(src="imgs/tigerlily/products/insights.svg")
              h2.product-title.tl-product-title Insights
            li.product.slide-child(data-animation="bounceIn")
              img(src="imgs/tigerlily/products/appbuilder.svg")
              h2.product-title.tl-product-title Appbuilder

      .slide.slide--3.slide--lighter(data-animation="zoomIn")
        .slide-content
          img.sl-logo(src="imgs/sleek/logo--white.png", width="130")
          img.sl-apercu.slide-child(src="imgs/sleek/workflow.png", data-animation="fadeInUp")

      .slide.slide--4.slide--lighter(data-animation="zoomIn")
        .slide-content
          img.studio-logo(src="imgs/studio/logo--violet.gif", width="250")
          img.img-b.fb-logo.slide-child(data-animation="bounceIn", src="imgs/fb-logo--blue--144.png", width="130")

      .slide.slide--5.slide--lighter(data-animation="fadeInLeft")
        .slide-content
          img.studio-logo(src="imgs/studio/logo--violet.gif", width="250")
          .products-container
            .product.slide-child(data-animation="bounceIn")
              img(src="imgs/studio/app-desktop.png")
              h2.product-title Desktop
            .product.slide-child(data-animation="bounceIn")
              img(src="imgs/studio/app-mobile.png")
              h2.product-title Mobile
            .product.slide-child(data-animation="bounceIn")
              img(src="imgs/studio/app-iframe.png")
              h2.product-title Iframe
            .product.slide-child(data-animation="fadeInRight")
              img(src="imgs/studio/app-ads.png")
              h2.product-title Advertising

    script(src="js/libs/zepto.min.js")
    script(src="js/app.js")